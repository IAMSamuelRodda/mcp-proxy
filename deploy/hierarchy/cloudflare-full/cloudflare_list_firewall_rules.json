{
  "tools": {
    "cloudflare_list_firewall_rules": {
      "description": "List firewall rules with filters and IDs for management.\n\nReturns all configured firewall rules for a zone including action types, filter expressions, and rule IDs needed for updates/deletions.",
      "maps_to": "cloudflare_list_firewall_rules",
      "server": "cloudflare-full",
      "inputSchema": {
        "type": "object",
        "properties": {
          "zone": {"type": "string", "description": "Zone name or zone ID", "minLength": 1},
          "page": {"type": "integer", "description": "Page number", "minimum": 1, "default": 1},
          "per_page": {"type": "integer", "description": "Results per page", "minimum": 1, "maximum": 100, "default": 50},
          "response_format": {"type": "string", "enum": ["markdown", "json"], "default": "markdown", "description": "Output format"}
        },
        "required": ["zone"],
        "additionalProperties": false
      }
    }
  }
}
