{
  "tools": {
    "stalwart_update_account": {
      "description": "Update account settings. Change password, quota, description, add emails.\n\nPartial updates - only provided fields are changed.",
      "maps_to": "stalwart_update_account",
      "server": "stalwart",
      "inputSchema": {
        "type": "object",
        "properties": {
          "params": {
            "type": "object",
            "properties": {
              "account_name": { "type": "string", "description": "Account to update" },
              "description": { "type": "string", "description": "New display name" },
              "password": { "type": "string", "description": "New password" },
              "quota": { "type": "integer", "description": "New quota in bytes" },
              "add_emails": { "type": "array", "items": { "type": "string" }, "description": "Email aliases to add" }
            },
            "required": ["account_name"]
          }
        },
        "required": ["params"],
        "additionalProperties": false
      }
    }
  }
}
