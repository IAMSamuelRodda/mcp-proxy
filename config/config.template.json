{
  "mcpProxy": {
    "name": "MCP Proxy",
    "version": "1.0.0",
    "type": "stdio",
    "hierarchyPath": "${MCP_PROXY_DIR}/hierarchy",
    "options": {
      "logEnabled": true,
      "lazyLoad": true,
      "preloadAll": true,

      "_comment_secrets": "Secrets provider configuration (disabled by default)",
      "_comment_secrets_providers": "Supported providers: 'none' (default), 'openbao', 'env'",
      "secretsProvider": "none",
      "secretsAutoStart": false,
      "secretsAutoStartCmd": "",
      "secretsProviderAddr": "",
      "secretsSessionPath": "",
      "secretsSessionEnvVar": ""
    }
  },
  "mcpServers": {
    "example-server": {
      "transportType": "stdio",
      "command": "${MCP_SERVERS_DIR}/example/.venv/bin/python",
      "args": ["${MCP_SERVERS_DIR}/example/server.py"],
      "env": {},
      "options": { "lazyLoad": true }
    }
  }
}
